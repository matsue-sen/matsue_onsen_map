<% content_for :title, '温泉詳細' %>
<div class="max-w-2xl w-full mx-auto py-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md text-center" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-bold text-3xl mb-6">温泉詳細</h1>
  <%= render partial: 'onsen', locals: { onsen: @onsen } %>
  <% if @onsen.images.attached? %>
    <div class="flex flex-wrap gap-2 mt-4">
      <% @onsen.images.each do |img| %>
        <%= image_tag img.variant(resize_to_limit: [200,200]), class: "rounded shadow border w-32 h-32 object-cover", alt: @onsen.name %>
      <% end %>
    </div>
  <% end %>
  <div class="mt-8 flex gap-2">
    <%= link_to '編集', edit_admin_onsen_path(@onsen), class: "rounded-md px-4 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-800 font-medium" %>
    <%= link_to '一覧に戻る', admin_onsens_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium" %>
    <%= button_to '削除', @onsen, method: :delete, form_class: "inline-block", class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium", data: { turbo_confirm: '本当に削除しますか？' } %>
  </div>
</div>
